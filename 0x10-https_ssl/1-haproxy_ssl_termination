global
        log /dev/log    local0
	stats socket /run/haproxy/admin.sock mode 660 level admin

defaults
        log     global
        mode    http
        option  httplog
	timeout connect  10s
	timeout client  30s
	timeout server  30s

frontend sage-frontend
	bind *:80
	bind *:443 ssl crt /etc/haproxy/certs/sagebeme.tech.pem
	http-request redirect scheme https unless { ssl_fc }
	http-request set-header X-Forwarded-Proto https
	default_backend sage-backend

backend sage-backend
	balance roundrobin
	server 131064-web-01 54.175.166.7:80 check
	server 131064-web-02 18.204.16.81:80 check
